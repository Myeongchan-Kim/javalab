package ticketBox;

import customer.Customer;

public class Ticketer {
	Customer myCustomer;
	public void reciveCustomer(Customer newCustomer){
		if(myCustomer != null){
			this.myCustomer = newCustomer;
			this.myCustomer.gotoTicketer();
		}
		else
			changeCustomer(newCustomer);

	}
	
	private void changeCustomer(Customer newComer){
		myCustomer.gotoQue();
		myCustomer = newComer;
		myCustomer.gotoTicketer();
	}
	
	public void treatCustomer(Platform platform){
		if(myCustomer.isTicketed()){
			myCustomer.gotoPlatform();
			myCustomer = null;
		}
	}
}
