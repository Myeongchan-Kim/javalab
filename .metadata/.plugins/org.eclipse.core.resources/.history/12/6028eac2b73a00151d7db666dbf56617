package scoreSystem;

import java.util.ArrayList;

/*singletone class*/
public class MyReport implements Report{

	ArrayList<Student> report = School.getInstance().stuList;
	
	public MyReport(){
		this.reportSchool();
	}
	
	public char majorGrade(int score) {
		char grade;
		
		//check wrong score;
		if(score < MIN_SCORE || score > MAX_SCORE) 
			return '0'; // '0' means err
		
		if(score >= 95) grade = 'S';
		else if (score >= 90) grade = 'A';
		else if (score >= 80) grade = 'B';
		else if (score >= 70) grade = 'C';
		else if (score >= 60) grade = 'D';
		else /*score < 60*/ grade = 'F';
		
		return grade;
	}

	public char minorGrade(int score) {
		char grade;
		
		//check wrong score;
		if(score < MIN_SCORE || score > MAX_SCORE) 
			return '0'; // '0' means err
		
		if (score >= 90) grade = 'A';
		else if (score >= 80) grade = 'B';
		else if (score >= 70) grade = 'C';
		else if (score >= 55) grade = 'D';
		else /*score < 55*/ grade = 'F';
		
		return grade;
	}
	
	public Student reportStudent(Student st) {
		for(int i =0; i< st.subList.size(); i++){
			Subject sj = st.subList.get(i);
			
			if(sj.name.equals(st.major.toString()))
				sj.grade = this.majorGrade(sj.score);
			else
				sj.grade = this.minorGrade(sj.score);
			
			st.subList.set(i, sj);
		}
		return st;
	}

	public void reportSchool() {
		School sc = School.getInstance();
		for(int i = 0; i< sc.stuList.size(); i++){
			Student st = sc.stuList.get(i );
			st = this.reportStudent(st);
			sc.stuList.set(i , st);
			System.out.println("입력"+ st+":");
			System.out.println(st.subList.get(0).grade);
			System.out.println(st.subList.get(1).grade);
		}
	}
	
	private void printStudent(Stduent st){
		System.out.print("이름 : "+ st.name);
		for(int j = 0 ; j < st.subList.size() ; j++){
			Subject subj = st.subList.get(j);
			System.out.print("\t"+subj.name+": "+subj.grade);
		}
	}
	
	@Override
	public void printStuList() {
		
		for(int i =0 ; i<report.size(); i++){
			Student st =  report.get(i);
			System.out.print("이름 : "+ st.name);
			for(int j = 0 ; j < st.subList.size() ; j++){
				Subject subj = st.subList.get(j);
				System.out.print("\t"+subj.name+": "+subj.grade);
			}
			System.out.println("");
		}
		
	}

}
