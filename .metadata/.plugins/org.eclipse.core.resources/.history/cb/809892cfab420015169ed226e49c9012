package maze;

import maze.constant.Geo;

public class Map {
	int [][] mapInfo; 
	int mapWidth;
	int mapHeight;
	int [][] map;
	
	public Map (int w, int h){
		if( w<1 || h<1 ) return;
		mapInfo = new int[w][h];
		mapWidth 	= w;
		mapHeight 	= h;
		
		for(int i =0; i< h; i++){
			for(int j=0; j<w; j++){
				mapInfo[i][j] = Geo.EMPTY;
			}
		}
		
		map = makeMap(mapInfo);
	}
	
	public Map ( int [][]info){
		if(info== null || info.length < 1 || info[0].length < 1 ) return;
		
		map = makeMap(info);
	}
	
	public int[][] makeMap(int [][] info){
		mapInfo 	= info;
		mapHeight	= info.length;
		mapWidth 	= info[0].length; 
		int[][] map = new int[mapHeight+2][mapWidth+2];
		for (int i=0; i<map.length; i++){
			for(int j=0; j<map[0].length; j++){
				if(i==0) map[i][j] = Geo.WALL;
			}
		}
		
		return map;
	}
}
