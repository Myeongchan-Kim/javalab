package maze;

public class Position {
	public int x;
	public int y;
	
	public Position(){
		this(0,0);
	}
	
	public Position (int x,int y){
		x = this.x;
		y = this.y;
	}
	
	public void add(int dx, int dy){
		x += dx;
		y += dy;
		return;
	}
	
	public Position add(Position delta){
		x += delta.x;
		y += delta.y;
	}
	
	public boolean equals(Position pos){
		if(pos.x == this.x && pos.y == this.y)
			return true;
		return false;
	}
}
